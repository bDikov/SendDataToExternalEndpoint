@model SendDataToExternalAPI.Services.ModelsDTO.FormDTO

@{
    ViewData["Title"] = "CreateForm";
}

<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <form asp-action="SendForm" id="data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="email" class="control-label">Please enter your email</label>
                <input asp-for="email" class="form-control" id="emailId" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group add-create">
                <input type="submit" value="Send" class="btn btn-primary" id="btnSendAsp" />
            </div>
            @*<div class="form-group add-create">
                <input class="btn btn-default" type="button" id="btnSend" value="Ajx Send" />
            </div>*@
            <div class="col-md-6">
                <div id="status"></div>
            </div>
        </form>
    </div>
</div>

<div id="carouselExampleSlidesOnly" class="carousel alert" data-ride="carousel" data-interval="300">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-25" src="~/images/p1.png" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-25" src="~/images/p2.png" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-25" src="~/images/p3.png" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-25" src="~/images/p4.png" alt="Third slide">
        </div>
    </div>
</div>


<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/form.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
